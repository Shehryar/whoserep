{
  "title": "Feedback",
  "styles": {
    "header": {
      "textType": "header2",
      "marginBottom": 36
    },
    "radioButton": {
      "padding": 20,
      "borderWidth": 1,
      "cornerRadius": 8,
      "marginBottom": 12
    },
    "radioButtonLabel": {
      "textType": "body",
      "marginLeft": 16
    },
    "separator": {
      "margin": "32 -24",
      "align": "fill"
    },
    "text": {
      "textType": "body"
    },
    "textArea": {
      "align": "fill",
      "marginBottom": 4,
      "textType": "body"
    }
  },
  "body": {
    "type": "stackView",
    "content": {
      "items": [
        {
          "type": "scrollView",
          "style": {
            "weight": 1,
            "align": "fill",
            "gravity": "fill"
          },
          "content": {
            "content": {
              "type": "stackView",
              "content": {
                "items": [
                  {
                    "type": "stackView",
                    "style": {
                      "padding": "40 24"
                    },
                    "content": {
                      "items": [
                        {
                          "type": "label",
                          "class": "header",
                          "style": {
                            "marginBottom": 18
                          },
                          "content": {
                            "text": "Feedback Survey"
                          }
                        },
                        {
                          "type": "label",
                          "class": "text",
                          "style": {
                            "marginBottom": 18
                          },
                          "content": {
                            "text": "Please take a moment to fill out the survey. It should only take about 1 minute to complete. Your responses will help us better serve our needs. Your individual survey answers may be shared internally for service improvement purposes."
                          }
                        },
                        {
                          "type": "label",
                          "class": "text",
                          "content": {
                            "text": "Thank you!"
                          }
                        },
                        {
                          "type": "separator",
                          "class": "separator"
                        },
                        {
                          "type": "label",
                          "class": "header",
                          "content": {
                            "text": "How likely are you to recommend Boost to friends or family?"
                          }
                        },
                        {
                          "type": "slider",
                          "id": "ratingSlider",
                          "name": "rating",
                          "style": {
                            "marginBottom": 8
                          },
                          "content": {
                            "min": 0,
                            "max": 10,
                            "label": {
                              "type": "label",
                              "style": {
                                "marginBottom": 10,
                                "align": "center",
                                "backgroundColor": "#8b92a3",
                                "textType": "header2",
                                "color": "#ffffff",
                                "padding": "8 16",
                                "cornerRadius": 4
                              },
                              "content": {
                                "text": ""
                              }
                            }
                          }
                        },
                        {
                          "type": "stackView",
                          "style": {
                            "marginBottom": 24
                          },
                          "content": {
                            "orientation": "horizontal",
                            "items": [
                              {
                                "type": "label",
                                "class": "text",
                                "style": {
                                  "weight": 1,
                                  "align": "left"
                                },
                                "content": {
                                  "text": "Not at all likely"
                                }
                              },
                              {
                                "type": "label",
                                "class": "text",
                                "style": {
                                  "weight": 1,
                                  "align": "right",
                                  "textAlign": "right"
                                },
                                "content": {
                                  "text": "Extremely likely"
                                }
                              }
                            ]
                          }
                        },
                        {
                          "type": "textArea",
                          "class": "textArea",
                          "content": {
                            "placeholder": "Leave a comment (optional)"
                          }
                        },
                        {
                          "type": "separator",
                          "class": "separator",
                          "style": {
                            "align": "fill"
                          }
                        },
                        {
                          "type": "label",
                          "class": "header",
                          "content": {
                            "text": "Did this chat increase, decrease, or not change your likelihood to recommend Boost?"
                          }
                        },
                        {
                          "type": "radioButtonsContainer",
                          "id": "changeRadioButtons",
                          "name": "change",
                          "content": {
                            "buttons": [
                              {
                                "type": "radioButton",
                                "class": "radioButton",
                                "value": "increase",
                                "content": {
                                  "label": {
                                    "type": "label",
                                    "class": "radioButtonLabel",
                                    "content": {
                                      "text": "Increase"
                                    }
                                  }
                                }
                              },
                              {
                                "type": "radioButton",
                                "class": "radioButton",
                                "value": "decrease",
                                "content": {
                                  "label": {
                                    "type": "label",
                                    "class": "radioButtonLabel",
                                    "content": {
                                      "text": "Decrease"
                                    }
                                  }
                                }
                              },
                              {
                                "type": "radioButton",
                                "class": "radioButton",
                                "style": {
                                  "marginBottom": 0
                                },
                                "value": "noChange",
                                "content": {
                                  "label": {
                                    "type": "label",
                                    "content": {
                                      "text": "Not Change"
                                    },
                                    "class": "radioButtonLabel"
                                  }
                                }
                              }
                            ]
                          }
                        },
                        {
                          "type": "separator",
                          "class": "separator"
                        },
                        {
                          "type": "label",
                          "class": "header",
                          "content": {
                            "text": "Based on your answer to the previous question, could you explain why?"
                          }
                        },
                        {
                          "type": "textArea",
                          "class": "textArea",
                          "content": {
                            "placeholder": "Leave a comment (optional)"
                          }
                        },
                        {
                          "type": "separator",
                          "class": "separator"
                        },
                        {
                          "type": "label",
                          "class": "header",
                          "content": {
                            "text": "What could we do to better serve you?"
                          }
                        },
                        {
                          "type": "textArea",
                          "class": "textArea",
                          "content": {
                            "placeholder": "Leave a comment (optional)"
                          }
                        },
                        {
                          "type": "separator",
                          "class": "separator"
                        },
                        {
                          "type": "label",
                          "class": "header",
                          "content": {
                            "text": "Will you be calling customer care to follow up on this particular issue?"
                          }
                        },
                        {
                          "type": "radioButtonsContainer",
                          "content": {
                            "buttons": [
                              {
                                "type": "radioButton",
                                "class": "radioButton",
                                "content": {
                                  "label": {
                                    "type": "label",
                                    "class": "radioButtonLabel",
                                    "content": {
                                      "text": "I will be calling customer care"
                                    }
                                  }
                                }
                              },
                              {
                                "type": "radioButton",
                                "class": "radioButton",
                                "content": {
                                  "label": {
                                    "type": "label",
                                    "class": "radioButtonLabel",
                                    "content": {
                                      "text": "I will not be calling customer care"
                                    }
                                  }
                                }
                              }
                            ]
                          }
                        },
                        {
                          "type": "separator",
                          "class": "separator"
                        },
                        {
                          "type": "label",
                          "class": "text",
                          "style": {
                            "align": "center",
                            "textAlign": "center"
                          },
                          "content": {
                            "text": "Thank you very much for your time.\n\nWe know you have several choices for a telecommunications provider and we appreciate your business.\n\nThank you for choosing Boost."
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          }
        },
        {
          "type": "stackView",
          "style": {
            "align": "fill"
          },
          "content": {
            "orientation": "horizontal",
            "items": [
              {
                "type": "button",
                "style": {
                  "weight": 1,
                  "align": "fill"
                },
                "content": {
                  "title": "CANCEL",
                  "style": "secondary",
                  "action": {
                    "type": "finish"
                  }
                }
              },
              {
                "type": "button",
                "style": {
                  "weight": 1,
                  "align": "fill"
                },
                "content": {
                  "title": "SUBMIT",
                  "action": {
                    "type": "api",
                    "content": {
                      "requestPath": "srs/SendTextMessageAndHierAndTreewalk",
                      "inputFields": [
                        "ratingSlider",
                        "changeRadioButtons"
                      ],
                      "requiredInputFields": [
                        "ratingSlider"
                      ],
                      "data": {
                        "SendFinishMessage": true,
                        "Classification": "0_message_feedback_received",
                        "Text": "Uploaded Feedback"
                      }
                    }
                  }
                }
              }
            ]
          }
        }
      ]
    }
  }
}