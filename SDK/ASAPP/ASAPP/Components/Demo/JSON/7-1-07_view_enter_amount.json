{
  "title": "Enter Amount",
  "styles": {
    "textInput": {
      "align": "fill",
      "marginBottom": 4,
      "color": "#55607a"
    }
  },
  "body": {
    "type": "stackView",
    "style": {
      "gravity": "fill"
    },
    "content": {
      "items": [
        {
          "type": "scrollView",
          "style": {
            "weight": 1,
            "align": "fill",
            "gravity" : "fill"
          },
          "content": {
            "content": {
              "type": "stackView",
              "content": {
                "items": [
                  {
                    "type": "stackView",
                    "content": {
                      "items": [
                        {
                          "type": "label",
                          "content": {
                            "text": "Enter Amount"
                          },
                          "style": {
                            "fontSize": 18,
                            "fontWeight": "black",
                            "color": "#55607a",
                            "marginBottom": 12
                          }
                        },
                        {
                          "type": "label",
                          "content": {
                            "text": "Enter the amount you'd like to pay."
                          },
                          "style": {
                            "fontSize": 14,
                            "color": "#55607a",
                            "marginBottom": 12
                          }
                        },
                        {
                          "id": "amountInput",
                          "type": "textInput",
                          "class": "textInput",
                          "name": "amount",
                          "content": {
                            "placeholder": "Amount",
                            "type" : "decimal"
                          }
                        }
                      ]
                    },
                    "style": {
                      "padding": 20
                    }
                  }
                ]
              }
            }
          }
        },
        {
          "type": "stackView",
          "style": {
            "weight": 0,
            "align": "fill"
          },
          "content": {
            "orientation": "horizontal",
            "items": [
              {
                "type": "button",
                "content": {
                  "title": "CANCEL",
                  "style": "secondary",
                  "action": {
                    "type": "finish"
                  }
                },
                "style": {
                  "weight": 1,
                  "align": "fill"
                }
              },
              {
                "type": "button",
                "content": {
                  "title": "SUBMIT",
                  "action": {
                    "type": "api",
                    "content": {
                      "requestPath": "7-1-08_message_confirm_payment_amount",
                      "inputFields": [
                        "amountInput"
                      ],
                      "requiredInputFields": [
                        "amountInput"
                      ],
                      "data": {
                        "type": "paymentAccount"
                      }
                    }
                  }
                },
                "style": {
                  "weight": 1,
                  "align": "fill"
                }
              }
            ]
          }
        }
      ]
    }
  }
}